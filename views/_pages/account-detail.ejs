<h2>Account Details</h2>
<div class="account-details" data-module="AccountDetails" data-id="<%= data.account._id %>">
	<form>
		<div>
			<label for="name">Name:</label>
			<input type="text" id="name" name="name" value="<%= data.account.name %>" />
		</div>
		<div>
			<label for="locations-list">Locations:</label>
			<span id="locations-list"></span>
		</div>
		<div>
			<label for="users-list">Users:</label>
			<span id="users-list" class="link-list"></span>
		</div>
	</form>
</div>
